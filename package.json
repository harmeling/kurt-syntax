{
    "name": "kurt-syntax",
    "displayName": "Kurt Syntax",
    "description": "Syntax highlighting for the Kurt language.",
    "version": "0.0.1",
    "publisher": "Stefan Harmeling",
    "license": "MIT",
    "engines": {
        "vscode": "^1.99.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/harmeling/kurt-syntax.git"
    },
    "scripts": {
         "build": "tsc",
         "watch": "tsc --watch",
         "package": "vsce package",
         "install": "code --install-extension kurt-syntax-0.0.1.vsix --force"
    },
    "activationEvents": [
        "onLanguage:kurt"
    ],
    "main": "./out/extension.js",
    "keywords": ["syntax", "highlighting", "kurt", "dsl", "language"],
    "contributes": {
        "languages": [
            {
                "id": "kurt",
                "aliases": [
                    "Kurt",
                    "kurt"
                ],
                "extensions": [
                    ".kurt"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "kurt",
                "scopeName": "source.kurt",
                "path": "./syntaxes/kurt.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "kurt",
                "path": "./snippets/kurt-snippets.json"
            }
        ]
    },
    "devDependencies": {
        "@types/vscode": "^1.99.1",
        "typescript": "^5.8.3"
    }
}
