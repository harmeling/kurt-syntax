{
  "name": "Kurt",
  "scopeName": "source.kurt",
  "patterns": [
    {
      "name": "comment.line.semicolon.kurt",
      "match": ";.*$"
    },
    {
      "name": "string.quoted.double.kurt",
      "match": "\".*?\""
    },
    {
      "name": "keyword.control.first.kurt",
      "match": "\\b(?:var|const|infix|postfix|prefix|brackets|arity|bindop|flat|sym|bool|alias)\\b"
    },
    {
      "name": "keyword.control.second.kurt",
      "match": "\\b(?:use|assume|let|show|def|proof|qed|thus|theorem|lemma|proposition|because)\\b"
    },
    {
      "name": "keyword.control.third.kurt",
      "match": "\\b(?:contradiction|true|false)\\b"
    }
  ]
}
